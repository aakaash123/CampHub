<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;

        }
        .spacer {
            width: 100%;
            height: 100px;
        }
        body {
            font-family: "Open Sans", sans-serif;
            background-color:#1F4769;
                                    animation: bg 30s infinite linear;
        }
        nav {
            width: 100%;
            background-color:#1F4769;
                        animation: bg 30s infinite linear;
            display: flex;
            justify-content: space-between;
        }
        .logo {
            padding: 20px;
            text-decoration: none;
            color: #fff;
            text-transform: uppercase;
        }
        nav .nav-bar {
            padding: 20px;
            display: flex;
        }
        nav .nav-bar .nav-bar_item {
            list-style-type: none;
            padding: 0px 20px;
        }
        nav .nav-bar .nav-bar_item a {
            position: relative;
            display: block;
            padding-bottom: 5px;
            text-decoration: none;
            color: #fff;
            text-transform: uppercase;
        }
        nav .nav-bar .nav-bar_item a:after {
            content: "";
            position: absolute;
            width: 0%;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: #fff;
            transition: 0.1s ease-in-out;
        }
        nav .nav-bar .nav-bar_item a:hover:after {
            width: 100%;
        }
        @import url('https://fonts.googleapis.com/css?family=Exo:400,700,800,600|Montserrat:400,700|Roboto:400,700&display=swap');

        *,
        *:before,
        *:after {
          box-sizing: border-box;
        }

        html {
          font-size: 18px;
        }



        .card {
          width: 50vw;
          height: auto;
          position: absolute;
          top: 30vh;
          left: 25vw;
          background: #fff;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          border-radius: 10px;
          overflow: hidden;
          display: flex;
          flex-direction: column;
          align-items: center;
          padding: 20px;
        }

        .product-info {
          text-align: center;
        }

        .product-name,
        .product-price {
          font-family: 'Exo', sans-serif;
        }

        .product-name {
          font-size: 2.5em;
          font-weight: 800;
          text-transform: uppercase;
          margin: 0.5em 0;
        }

        .product-price {
          font-size: 3em;
          font-weight: 900;
          color: #0f7a94;
          margin: 0.5em 0;
        }

        .product-price::before {
          content: "$ ";
        }

        .product-slogan {
          font-family: 'Montserrat', sans-serif;
          color: #666;
          margin: 1em 0;
        }

        .button {
          font-family: 'Montserrat', sans-serif;
          background: #333;
          font-size: 1em;
          text-transform: uppercase;
          letter-spacing: 0.1em;
          text-decoration: none;
          color: #fff;
          padding: 15px 30px;
          border-radius: 7px;
          transition: background 0.25s ease;
          margin: 0.5em 0;
        }

        .button:hover {
          background: #555;
        }

    </style>
</head>
<body>
    <nav>
        <a class="logo" href="#">Camphub</a>
        <ul class="nav-bar">
            <li class="nav-bar_item"><a href="/">home</a></li>
            <li class="nav-bar_item"><a href="/allcamps">all camps</a></li>
            <li class="nav-bar_item"><a href="/addcamp">add camp</a></li>
        </ul>
    </nav>

    <% if (camp) { %>
        <div class="card">
            <div class="product-info">
                <h1 class="product-name"><%= camp.title %></h1>
                <h2 class="product-price"><%= camp.price %></h2>
                <h3 class="product-slogan"><%= camp.description %></h3>
                <a class="button edit-btn" data-camp-id="<%= camp._id %>" href="#">edit</a>
                <a class="button delete-btn" data-camp-id="<%= camp._id %>" href="#">delete</a>
            </div>
        </div>
    <% } else { %>
        <div class="card">
                    <div class="product-info">
                        <h1 class="product-name"><%= "successfully deleted" %></h1>
                    </div>
                </div>
    <% } %>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Function to handle edit button click
            $('.edit-btn').click(function() {
                // Retrieve the camp ID from data attribute
                var campId = $(this).data('camp-id');
                // Send AJAX request to editcamp route
                $.ajax({
                    url: '/editcamp/' + campId,
                    type: 'GET',
                    success: function(response) {
                        // Optionally handle success response
                        console.log('Campground editing initiated');
                        // Redirect to the form page for editing
                        window.location.href = '/editcamp/' + campId;
                    },
                    error: function(xhr, status, error) {
                        // Handle errors
                        console.error('Error initiating campground editing:', error);
                    }
                });
            });

            // Function to handle delete button click
            $('.delete-btn').click(function() {
                // Retrieve the camp ID from data attribute
                var campId = $(this).data('camp-id');
                // Send AJAX request to deletecamp route
                $.ajax({
                    url: '/deletecamp/' + campId,
                    type: 'POST',
                    success: function(response) {
                        // Optionally handle success response
                        console.log('Campground deleted successfully');
                        // For example, reload the page after deletion
                        window.location.reload();
                    },
                    error: function(xhr, status, error) {
                        // Handle errors
                        console.error('Error deleting campground:', error);
                    }
                });
            });
        });
    </script>

</body>
</html>